model Admin {
  id               String            @id @default(auto()) @map("_id") @db.ObjectId
  email_id         String?
  name             String?
  password         String?
  random_id        String?
  role             Int
  balance          Float             @default(0)
  escrowBalance    Float             @default(0)
  tfa_secretKey    String?
  tfa_status       Boolean           @default(false)
  authentic_status Boolean           @default(false)
  is_verify        Boolean           @default(false)
  email_otp        String?
  temp_otp         String?
  authToken        String?
  twofa_status     String            @default("0")
  qrCode           String?
  temp_token       Json? // Array in Mongoose
  socket_id        String?
  loginActivites   LoginStatus?
  withdrawOtp      Int?
  isDeleted        Boolean           @default(false)
  admin_id         String?
  deposit_amt      Float?
  withdraw_amt     Float?
  first_Login      Int               @default(1)
  chats            AdminChat[]
  sportsList       AdminSportsList[]
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt

  @@map("admins")
}

type AdminChat {
  sender_id   String?
  receiver_id String[]
  message     String?
  image       String?
}

type AdminSportsList {
  game   String?
  status Boolean?
}

model SubAdmin {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email_id  String?
  name      String?
  password  String?
  role      String   @default("admin")
  admin_id  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("subadmins")
}

model SiteSetting {
  id             String        @id @default(auto()) @map("_id") @db.ObjectId
  decimal        Int?
  image_lmt      Int?
  logintime      Int?
  points         Int?
  ip_block_count Int?
  spot           Boolean?
  p2p            Boolean?
  ico            Boolean?
  otc            Boolean?
  futuretrading  Boolean?
  margintrading  Boolean?
  launchpad      Boolean?
  dex            Boolean?
  nft            Boolean?
  defi           Boolean?
  arbitrageBot   Boolean?
  match          BetLimit?
  bookmark       BetLimit?
  fancy          BetLimit?
  controls       SiteControl[]
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  @@map("site_settings")
}

type BetLimit {
  maxBet Float @default(0)
  minBet Float @default(0)
}

type SiteControl {
  name    String?
  sportid Int?
  status  Boolean?
}

model SuspendList {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  user_id   String?
  status    Boolean?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("suspend_lists")
}

model BlockedList {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  user_id   String?
  status    Boolean?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("blocked_lists")
}

model SupportChat {
  id            String           @id @default(auto()) @map("_id") @db.ObjectId
  sender_id     String?
  sender_name   String?
  receiver_id   String?
  receiver_name String?
  sender_role   Int?
  chats         SupportChatMsg[]
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt

  @@map("support_chats")
}

type SupportChatMsg {
  sender_id   String?
  receiver_id String?
  message     String?
  image       String?
  type        Int?
  time        String?
  readedAt    DateTime?
  msgFrom     String?
}

model Banner {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  title        String?
  description  String?
  banner_image String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("banners")
}
